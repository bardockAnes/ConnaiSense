<style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800;900&display=swap");
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Poppins", sans-serif;

}
body {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #05445E;
  min-height: 100vh;
}
.list {
  position: relative;

}
.list h2 {
  color: #fff;
  font-weight: 700;
  letter-spacing: 1px;
  margin-bottom: 10px;
  padding-right: 20px;
  text-align:right;
}
.list ul {
  position: relative;
}
.list ul li {
  position: relative;
  right: 0;
  color: #fce4ec;
  list-style: none;
  margin: 4px 0;
  border-right: 2px solid #75E6DA;
  transition: 0.5s;
  cursor: pointer;
  display: flex;
  flex-direction: row-reverse;
}
.list ul li:hover {
  right: 10px;
}
.list ul li span {
  position: relative;
  padding: 8px;
  padding-right: 12px;
  display: inline-block;
  z-index: 1;
  transition: 0.5s;
  
}
.list ul li:hover span {
  color: #111;
}
.list ul li:before {
  content: "";
  position: absolute;
  width: 100%;
  height: 100%;
  background: #75E6DA;
  transform: scaleX(0);
  transform-origin: right;
  transition: 0.5s;
  
}
.list ul li:hover:before {
  transform: scaleX(1);
}
</style>



